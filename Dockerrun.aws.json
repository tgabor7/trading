{
    "AWSEBDockerrunVersion": 3,
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "tgabor7/crypto-app-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["frontend", "backend"],
            "memory": 100
        },
        {
            "name": "frontend",
            "image": "tgabor7/crypto-app-frontend",
            "hostname": "frontend",
            "essential": false,
            "memory": 300
        },
        {
            "name": "backend",
            "image": "tgabor7/crypto-app-backend",
            "hostname": "backend",
            "essential": false,
            "memory": 300
        }
    ]
}